n = int(input())
for i in range(n+1):
    if i == n:
        print("*" * ((2*n+1)))
    for j in range(1,2*n+1):
        if i!= n and (j == n+1-i or j == n+1+i) :
            print("*",end="")
        else:
            print(" ",end = "")
            
    print()
    
    
    
         *
        * *
       *   *
      *     *
     *********
