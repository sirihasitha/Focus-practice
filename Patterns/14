n = int(input())
for i in range(n+1):
    for j in range(1,2*n+1):
        if j == n+1-i or j == n+1+i:
            print("*",end="")
        else:
            print(" ",end = "")
            
    print()
    

for i in range(n-1,-1,-1):
    for j in range(1,2*n+1):
        if j == n+1-i or j == n+1+i:
            print("*",end="")
        else:
            print(" ",end = "")
            
    print()
